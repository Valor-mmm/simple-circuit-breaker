{
  "name": "simple-circut-breaker",
  "version": "0.1.0",
  "description": "A simple utility to apply the circuit breaker pattern to any asynchronous function.",
  "main": "lib/index.js",
  "author": "Stefan Hauser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Valor-mmm/simple-circut-breaker.git"
  },
  "scripts": {
    "build": "tsc -p .",
    "test": "jest",
    "lint:ts": "tsc",
    "lint:eslint": "eslint src",
    "lint:style": "prettier --check \"src/**\"",
    "lint": "yarn lint:style && yarn lint:ts && yarn lint:eslint",
    "format": "prettier --write \"src/**\""
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "7.10.4",
    "@types/jest": "26.0.10",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "babel-jest": "^26.3.0",
    "eslint": "7.7.0",
    "husky": "4.2.5",
    "jest": "26.4.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
